<div style="width: 100%">
  <div style="display: flex; width: 100%; justify-content: space-between">
    Вы вошли как {{ user.name }}
    <form action="/user/logout">
      <input type="submit" value="Выйти">
    </form>
  </div>
  <div style='width: 100%; overflow-y: scroll; border: 1px solid black; height: 600px; border-radius: 10px; margin-bottom: 5px; margin-top: 25px'>
      {% for value in blog.returnHistory() %}
        <div>
            {{ blog.getUserName(value.user_id) }}
            {{ value.text }}
            {{ value.date }}
            {% if value.image != '' %}
                <img src="/images/{{ value.image }}">
            {% endif %}
            {% if user.getRole() %}
              <form  action="/blog/deleteMessage?id={{ value.id }}" method="post">
                <input type="submit" value="удалить" name="id"></input>
              </form>
            {% endif %}
        </div>
      {% endfor %}
  </div>
  <form enctype="multipart/form-data" action="/blog/addMessage" method="post">
      <input style="width: 100%;" name="messageText" type='text' placeholder="Введите сообщение">
      добавьте картинку <input name="image" type='file'><br>
      <input type="submit" value="отправить">
  </form>
</div>
{% if error %}
    <span style="color: red">{{ error }}<span>
{% endif %}